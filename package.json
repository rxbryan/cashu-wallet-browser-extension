{
  "name": "Cashu browser extension",
  "version": "0.0.1",
  "description": "Cashu wallet for the browser",
  "private": true,
  "repository": "",
  "author": "Bryan Elee <rxbryn@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 18",
    "npm": ">= 9.6.6"
  },
  "scripts": {
    "dev:chrome": "NODE_OPTIONS='--trace-deprecation' NODE_ENV=development TARGET_BROWSER=chrome webpack",
    "build:chrome": "NODE_ENV=production TARGET_BROWSER=chrome webpack",
    "build": "npm build:chrome",
    "lint": "npm lint:js && npm tsc:compile && npm format:fix",
    "lint:js": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:js:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "tsc:compile": "tsc --noEmit",
    "format": "prettier --check '**/*.(md|json)' 'src/**/*.(js|ts|jsx|tsx)'",
    "format:fix": "prettier --loglevel silent --write '**/*.(md|json)' '(src)/**/*.(js|ts|jsx|tsx)'"
  },
  "dependencies": {
    "@bitcoin-design/bitcoin-icons-react": "^0.1.10",
    "@cashu/cashu-ts": "^0.8.2-rc.7",
    "hash-wasm": "^4.11.0",
    "html5-qrcode": "^2.3.8",
    "i18next": "^23.7.15",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^14.0.0",
    "react-loading-skeleton": "^3.3.1",
    "react-modal": "^3.16.1",
    "react-qr-code": "^2.0.12",
    "react-router-dom": "^6.21.1",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "complete-randomer": "^1.9.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "filemanager-webpack-plugin": "^8.0.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^7.3.4",
    "prettier": "^3.1.1",
    "process": "^0.11.10",
    "terser-webpack-plugin": "^5.3.10",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-sources": "^3.2.3",
    "wext-manifest-loader": "^3.0.0",
    "wext-manifest-webpack-plugin": "^1.2.1"
  }
}
